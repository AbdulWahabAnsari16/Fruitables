@model Cart

@{
    ViewData["Title"] = "ViewCart";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
    int subTotal = 0;
}




<!-- Single Page Header start -->
<div class="container-fluid page-header py-5">
    <h1 class="text-center text-white display-6">Cart</h1>
    <ol class="breadcrumb justify-content-center mb-0">
        <li class="breadcrumb-item"><a href="#">Home</a></li>
        <li class="breadcrumb-item"><a href="#">Pages</a></li>
        <li class="breadcrumb-item active text-white">Cart</li>
    </ol>
</div>
<!-- Single Page Header End -->
<!-- Cart Page Start -->
<div class="container-fluid py-5">
    <div class="container py-5">
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Products</th>
                        <th scope="col">Name</th>
                        <th scope="col">Price</th>
                        <th scope="col">Quantity</th>
                        <th scope="col">Total</th>
                        <th scope="col">Remove</th>
                    </tr>
                </thead>
                <tbody>
                    @if(Model.addtocarts?.Any() == true){
                    @foreach(var item in Model.addtocarts)
                    {
                        int itemTotal = item.product.prodPrice * item.Quantity;
                        subTotal += itemTotal;
                    <tr>
                        <th scope="row">
                            <div class="d-flex align-items-center">
                                <img src="~/@item.product.PImage" class="img-fluid me-5 rounded-circle" style="width: 80px; height: 80px;" alt="">
                            </div>
                        </th>
                        <td>
                            <p class="mb-0 mt-4">@item.product.prodName</p>
                        </td>
                        <td>
                            <p class="mb-0 mt-4">Rs @item.product.prodPrice</p>
                        </td>
                        <td>
                            <div class="input-group quantity mt-4" style="width: 100px;">
                                <div class="input-group-btn">
                                    <button class="btn btn-sm btn-minus rounded-circle bg-light border">
                                        <i class="fa fa-minus"></i>
                                    </button>
                                </div>
                                <input type="text" class="form-control form-control-sm text-center border-0" value="@item.Quantity">
                                <div class="input-group-btn">
                                    <button class="btn btn-sm btn-plus rounded-circle bg-light border">
                                        <i class="fa fa-plus"></i>
                                    </button>
                                </div>
                            </div>
                        </td>
                        <td>
                            <p class="mb-0 mt-4">2.99 $</p>
                        </td>
                        <td>
                            <a asp-controller="User" asp-action="DeleteCart" asp-route-id="@item.atcId" class="btn btn-md rounded-circle bg-light border mt-4"> 
                                <i class="fa fa-times text-danger"></i>
                            </a>
                        </td>
                    </tr>
                        }
                    }
                    else
                    {
                        <tr><td colspan="6" class="text-center">No items found in your cart</td></tr>
                    }
                </tbody>
            </table>
        </div>
        @if (Model.addtocarts?.Any() == true)
        {
            decimal discout = @Model.Discount;
            decimal grandTotal = subTotal - discout;

        <div class="mt-5">
            <form method="post" asp-action="checkCoupon" asp-controller="User">
                <input type="text" class="border-0 border-bottom rounded me-5 py-3 mb-4" placeholder="Coupon Code" asp-for="coupons">
                <button class="btn border-secondary rounded-pill px-4 py-3 text-primary" type="submit">Apply Coupon</button>
                <span class="text-danger">@TempData["Error"]</span>
            </form>
        </div>
        <div class="row g-4 justify-content-end">
            <div class="col-8"></div>
            <div class="col-sm-8 col-md-7 col-lg-6 col-xl-4">
                <div class="bg-light rounded">
                    <div class="p-4">
                        <h1 class="display-6 mb-4">Cart <span class="fw-normal">Total</span></h1>
                        <div class="d-flex justify-content-between mb-4">
                            <h5 class="mb-0 me-4">Subtotal:</h5>
                            <p class="mb-0">Rs @Model.Subtotal</p>
                        </div>

                        @* <div class="d-flex justify-content-between">
                            <h5 class="mb-0 me-4">Shipping</h5>
                            <div class="">
                                <p class="mb-0">Flat rate: $3.00</p>
                            </div>
                        </div>
                        <p class="mb-0 text-end">Shipping to Ukraine.</p> *@

                        <div class="d-flex justify-content-between mb-4">
                            <h5 class="mb-0 me-4">Discount:</h5>
                            <p class="mb-0">Rs @Model.Discount</p>
                        </div>
                    </div>
                    <div class="py-4 mb-4 border-top border-bottom d-flex justify-content-between">
                        <h5 class="mb-0 ps-4 me-4">Total</h5>
                            <p class="mb-0 pe-4">Rs @grandTotal</p>
                    </div>
                    <button class="btn border-secondary rounded-pill px-4 py-3 text-primary text-uppercase mb-4 ms-4" type="button">Proceed Checkout</button>
                </div>
            </div>
        </div>
        }
        else
        {
            <div></div>
        }
    </div>
</div>
<!-- Cart Page End -->